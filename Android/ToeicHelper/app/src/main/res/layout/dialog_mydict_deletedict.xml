<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/ThemeWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/ThemeBlack"
            android:textColor="@color/ThemeWhite"
            android:text="단어장 제거"
            android:gravity="center|left"
            android:padding="15dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txtvMydictDeleteDlgName"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지울 단어장 이름 지우시겠습니까?"
            android:textSize="18dp"
            android:textColor="@color/ThemeBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ThemeGrey"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ThemeBlack"
            android:layout_marginBottom="5dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMydictDeleteDlgCancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="취소"
                android:textColor="@color/ThemeBlack"
                android:background="@drawable/btn_toeicdatedlg_cancle"/>

            <Button
                android:id="@+id/btnMydictDeleteDlgDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="제거"
                android:background="@drawable/btn_toeicdatedlg_ok"
                android:textColor="@color/ThemeWhite"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>