<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ThemeBlack">

        <TextView
            android:id="@+id/txtvWordCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:text="---"
            android:paddingRight="12dp"
            android:textSize="25dp"
            android:textColor="@color/ThemeWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.alexvasilkov.foldablelayout.FoldableListLayout
            android:id="@+id/foldlayWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.alexvasilkov.foldablelayout.FoldableListLayout>

        </LinearLayout>

</LinearLayout>