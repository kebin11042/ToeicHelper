<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeGrey"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarLogined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/ThemeBlack"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawlayLogined"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/containerLogined"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyvLogined"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/laydrawerLogined"
            android:layout_width="280dip"
            android:layout_height="match_parent"
            android:background="@color/ThemeWhite"
            android:orientation="vertical"
            android:layout_gravity="left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_marginBottom="50dp"
                    android:id="@+id/txtvLoginedMenuName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ThemeBlack"
                    android:text="이름 들어갈 자리"
                    android:gravity="center"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/txtvLoginedMenuEmail"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textColor="@color/ThemeBlack"
                    android:gravity="center"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txtvLoginedMenuLogout"
                    android:layout_marginTop="70dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="@color/ThemeBlack"
                    android:textSize="15dp"
                    android:background="@drawable/selector"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>